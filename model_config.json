{
    "models": {
        "Helsinki-NLP/opus-mt-ar-en": {
            "type": "marian",
            "task": "translation",
            "src_codes": {
                "english": "en",
                "darija": "ar"
            },
            "tgt_codes": {
                "english": "en",
                "darija": "ar"
            },
            "format": "marian",
            "description": "Reliable Arabic-English translation model"
        },
        "facebook/nllb-200-distilled-600M": {
            "type": "nllb",
            "task": "translation",
            "src_codes": {
                "english": "eng_Latn",
                "darija": "arb_Arab"
            },
            "tgt_codes": {
                "english": "eng_Latn",
                "darija": "arb_Arab"
            },
            "format": "nllb",
            "description": "NLLB model with Arabic support"
        },
        "facebook/mbart-large-50-many-to-many-mmt": {
            "type": "mbart",
            "task": "translation",
            "src_codes": {
                "english": "en_XX",
                "darija": "ar_AR"
            },
            "tgt_codes": {
                "english": "en_XX",
                "darija": "ar_AR"
            },
            "format": "mbart",
            "description": "mBART model for multilingual translation"
        }
    },
    "formats": {
        "marian": {
            "payload": {
                "inputs": "{text}",
                "parameters": {
                    "task": "translation",
                    "max_length": 128,
                    "wait_for_model": true
                }
            }
        },
        "nllb": {
            "payload": {
                "inputs": "{text}",
                "parameters": {
                    "src_lang": "{src_lang}",
                    "tgt_lang": "{tgt_lang}",
                    "task": "translation",
                    "max_length": 128,
                    "wait_for_model": true,
                    "return_full_text": false
                }
            }
        },
        "mbart": {
            "payload": {
                "inputs": "{text}",
                "parameters": {
                    "src_lang": "{src_lang}",
                    "tgt_lang": "{tgt_lang}",
                    "task": "translation",
                    "max_length": 128,
                    "wait_for_model": true,
                    "return_full_text": false
                }
            }
        }
    }
}
